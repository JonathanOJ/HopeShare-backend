{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=__tests__",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.782.0",
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/lib-dynamodb": "^3.782.0",
    "@aws-sdk/lib-storage": "^3.903.0",
    "@aws-sdk/s3-request-presigner": "^3.901.0",
    "aws-sdk": "^2.1687.0",
    "aws-serverless-express": "^3.4.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.1",
    "mercadopago": "^2.9.0",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.2",
    "pg": "^8.12.0",
    "pg-promise": "^11.9.1",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "eslint": "^8.22.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.19",
    "serverless": "^4.2.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/handler.js",
      "!src/**/__tests__/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
